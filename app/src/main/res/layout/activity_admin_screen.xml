<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frontend.AdminActivities.AdminScreen">

    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="528dp"
        android:fontFamily="@font/barlow_medium"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#1F7A8C"
        android:fontFamily="@font/barlow"
        android:onClick="onClickSignOutButton"
        android:text="Sign Out"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/inboxRegistrations"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="329dp"
        android:backgroundTint="#022B3A"
        android:fontFamily="@font/barlow"
        android:onClick="onClickInboxRegistrations"
        android:text="Pending Registrations"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rejectedRegistrations"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#022B3A"
        android:fontFamily="@font/barlow"
        android:onClick="onClickRejectedRegistrations"
        android:text="Rejected Registrations"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/inboxRegistrations"
        app:layout_constraintTop_toBottomOf="@+id/inboxRegistrations" />
</androidx.constraintlayout.widget.ConstraintLayout>